+
+static ClutterFrameResult
+inhibit_frame_clock_frame (ClutterFrameClock *frame_clock,
+                           int64_t            frame_count,
+                           int64_t            time_us,
+                           gpointer           user_data)
+{
+  InhibitTest *test = user_data;
+  ClutterFrameInfo frame_info;
