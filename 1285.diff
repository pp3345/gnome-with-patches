+      g_assert (clutter_timeline_get_frame_clock (timeline) ==
+                test->frame_clock_1);
+      test->frame_counter[0]++;
+    }
+  else if (test->phase == 2)
+    {
+      g_assert (clutter_timeline_get_frame_clock (timeline) ==
+                test->frame_clock_2);
+      test->frame_counter[1]++;
+    }
