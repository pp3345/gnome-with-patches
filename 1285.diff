+frame_clock_timeline_switch (void)
+{
+  GMainLoop *main_loop;
+  ClutterFrameClock *frame_clock2;
+  ClutterFrameClock *frame_clock1;
+  ClutterTimeline *timeline;
+  int frame_counter;
+  int64_t before_us;
+  int64_t after_us;
+
+  main_loop = g_main_loop_new (NULL, FALSE);
